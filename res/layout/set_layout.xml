<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="#f7f7f7"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/maincolor"
            android:gravity="center_vertical"
            >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ceshi_05"
                android:layout_centerVertical="true"
                android:id="@+id/back"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
        <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
                   android:src="@drawable/ceshi_03"
                   android:layout_alignParentRight="true"
                   android:paddingRight="15dp"
                   android:paddingLeft="10dp"
                   android:background="@drawable/top_back_select"
                   android:onClick="onTopMenuPopupButtonClick"/>
    </RelativeLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:padding="5dp"
                  android:id="@+id/setting_password"
                  android:background="@drawable/zhuye_item_select"
                  android:layout_marginTop="5dp"
            >
        <TextView
                android:id="@+id/set_update_pass"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="修改密码"
                  android:layout_weight="1"
                  android:layout_marginLeft="10dp"
                  android:textSize="18dp"
                  android:textColor="#333333"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/arrow_right"/>
    </LinearLayout>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:background="@drawable/zhuye_item_select"
                  android:padding="5dp"
                  android:id="@+id/setting_check"
                  android:layout_marginTop="5dp"
            >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="检查更新"
                  android:textSize="18sp"
                  android:layout_marginLeft="10dp"
                  android:layout_weight="1"
                  android:textColor="#333333"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/arrow_right"/>
    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"></LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="40dp"
                  android:orientation="horizontal"
                  android:background="@drawable/zhuye_item_select"
                  android:id="@+id/setting_exit_layout"
                  android:clickable="true"
                  android:layout_marginTop="5dp"
                  android:layout_marginBottom="20dp"
            >
        <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                  android:text="退出当前账号"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:id="@+id/setting_exit"
                  android:textColor="#f00f00"/>

    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="0.1dp"
          android:background="#d1d1d1"
          android:layout_marginBottom="10dp"/>
</LinearLayout>